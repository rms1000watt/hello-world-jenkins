pipeline {
    agent {
        docker {
            image 'docker:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock --rm'
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh("git clone https://github.com/rms1000watt/dummy-nodejs-project.git")
                cd dummy-nodejs-project
                sh("ls -la")
                echo 'Building Done'
            }
        }
        stage('Test') { 
            steps {
                echo 'Testing Done'
            }
        }
    }
}
