pipeline {
    agent {
        docker {
            image 'docker:17.12.0-ce-git'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }
    stages {
        stage('Build') { 
            steps {
                sh("rm -rf dummy-nodejs-project")
                sh("git clone https://github.com/rms1000watt/dummy-nodejs-project.git")
                sh("cd dummy-nodejs-project && \
                    ./build.sh && \
                    echo 'Building done'")
            }
        }
        stage('Test') { 
            steps {
                echo 'Testing Done'
            }
        }
    }
}
