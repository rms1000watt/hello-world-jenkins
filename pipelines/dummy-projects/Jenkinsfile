pipeline {
    agent {
        docker {
            image 'docker:latest'
            args '-v /var/run/docker.sock:/var/run/docker.sock --rm'
        }
    }
    def exists = fileExists 'dummy-nodejs-project'
    if (!exists){
        new File('dummy-nodejs-project').mkdir()
    }
    dir ('dummy-nodejs-project') {
        git branch: "<ref spec>", changelog: false, poll: false, url: 'https://github.com/rms1000watt/dummy-nodejs-project.git'
    }
    stages {
        stage('Build') { 
            steps {
                cd dummy-nodejs-project
                ls '-la'
                echo 'Building Done'
            }
        }
        stage('Test') { 
            steps {
                echo 'Testing Done'
            }
        }
    }
}
